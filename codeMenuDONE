#include<stdio.h>
#include<locale.h>

void Iniciar()
{
 setlocale(LC_ALL,"portuguese");
    printf("Jogo esta em desenvolvimento!\n");
}

void Config()
{
    printf("Em breve!!\n");
}

void Ranking()
{
    printf("Voce ainda não tem rank!\n");
}
void Creditos()
{
    printf("Desenvolvedores: Daniely ,Hamada,Josue e Matheus\n");
}

void sair()
{
    printf("Até logo...\n");
}


int main()
{
    int continuar=1;

    do
    {
        printf("\n\Nibirus Attacks\n\n");
        printf("1. Iniciar\n");
        printf("2. Config\n");
        printf("3. Ranking\n");
        printf("4. Créditos\n");
        printf("0. Sair\n");
        scanf("%d", &continuar);
        system("cls || clear");

        switch(continuar)
        {
            case 1:
                Iniciar();
                break;

            case 2:
                Config();
                break;

            case 3:
                Ranking();
                break;

                case 4:
                Creditos();
                break;

            case 0:
                sair();
                break;

            default:
                printf("Digite uma opcao valida\n");
        }
    } while(continuar);
}
